{
  "version": 2,
  "name": "tone-picker-text-tool",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://tone-picker-backend.vercel.app/api"
  }
}
